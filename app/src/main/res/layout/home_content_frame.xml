<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_content_posted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/tv_content_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/content_header"
                    android:scaleType="matrix" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profle_pic"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/home_event_image" />

                    <TextView
                        android:id="@+id/artist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"/>

                    <TextView
                        android:id="@+id/date_posted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Posted" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/tv_content_image"
                    android:layout_width="match_parent"
                    android:layout_height="448dp"
                    android:layout_below="@+id/tv_content_header"
                    android:background="@drawable/home_event_image"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/tv_content_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_content_image"
                    android:layout_marginTop="-64dp"
                    android:background="@drawable/home_event_footer"
                    android:scaleType="matrix" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_content_footer"
                    android:layout_alignBottom="@id/tv_content_footer"
                    android:orientation="vertical">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/arrow_up_float" />

                    <TextView
                        android:id="@+id/content_date"
                        android:text="Date"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/content_time"
                        android:text="Time"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/content_title"
                        android:text="Title"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/content_location"
                        android:text="Location"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_content_footer"
                        android:ems="10"/>>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>